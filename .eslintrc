{
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "globals": {
    "Promise": true
  },
  "rules": {
    "no-bitwise": 1,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-extend-native": 1,
    "no-use-before-define": 2,
    "no-caller": 2,
    "no-sequences": 2,
    "no-irregular-whitespace": 2,
    "no-new": 2,
    "require-jsdoc": [
      0,
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true
        }
      }
    ],
    "strict": 2,
    "no-undef": 2,
    "no-unused-vars": 2,
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "one-var": [
      2,
      "never"
    ],
    "valid-jsdoc": 2
  }
}